# WikiContest Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
# MySQL (recommended for development and production)
DATABASE_URL=mysql+pymysql://root:password@localhost/wikicontest

# For SQLite (only for quick testing)
# DATABASE_URL=sqlite:///wikicontest.db

# For PostgreSQL (alternative)
# DATABASE_URL=postgresql://username:password@localhost/wikicontest

# Security Keys (change these in production!)
SECRET_KEY=wikicontest-dev-secret-key-change-in-production
JWT_SECRET_KEY=wikicontest-jwt-secret-key-change-in-production

# Application Settings
FLASK_ENV=development
DEBUG=True

# CORS Origins (for frontend development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5000