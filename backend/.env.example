# WikiContest Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
# MySQL (recommended for development and production)
DATABASE_URL=mysql+pymysql://root:password@localhost/wikicontest

# For SQLite (only for quick testing)
# DATABASE_URL=sqlite:///wikicontest.db

# For PostgreSQL (alternative)
# DATABASE_URL=postgresql://username:password@localhost/wikicontest

# Security Keys (change these in production!)
SECRET_KEY=wikicontest-dev-secret-key-change-in-production
JWT_SECRET_KEY=wikicontest-jwt-secret-key-change-in-production

# Application Settings
FLASK_ENV=development
DEBUG=True

# CORS Origins (for frontend development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5000

# OAuth 1.0a Configuration (Wikimedia OAuth)
# You need to create a local OAuth consumer at: https://meta.wikimedia.org/wiki/Special:OAuthConsumerRegistration
# See docs/CREATE_LOCAL_OAUTH_CONSUMER.md for detailed instructions
OAUTH_MWURI=https://meta.wikimedia.org/w/index.php
CONSUMER_KEY=your-consumer-key-here
CONSUMER_SECRET=your-consumer-secret-here
OAUTH_USE_OOB=False

# MediaWiki API OAuth credentials for template enforcement feature
# If not set, falls back to CONSUMER_KEY and CONSUMER_SECRET above
# These credentials must have 'Edit existing pages' and 'Create, edit, and move pages' grants
MEDIAWIKI_CONSUMER_KEY=your-mediawiki-consumer-key-here
MEDIAWIKI_CONSUMER_SECRET=your-mediawiki-consumer-secret-here